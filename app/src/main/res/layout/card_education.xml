<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
		android:id="@+id/cardView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/dimen_3sp"
		xmlns:android="http://schemas.android.com/apk/res/android">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<LinearLayout
				android:id="@+id/linearLayoutHolder"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="@dimen/dimen_20sp">

			<ImageView
					android:layout_width="@dimen/dimen_64sp"
					android:layout_height="@dimen/dimen_64sp"
					android:background="@drawable/circle_background_pink"
					android:src="@drawable/ic_school_white_24dp"
					android:padding="@dimen/dimen_10sp"/>

			<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginStart="10dp"
					android:orientation="vertical">

				<TextView
						android:id="@+id/school_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/dimen_16sp" />

				<TextView
						android:id="@+id/school_period"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@id/school_name"
						android:textSize="@dimen/dimen_14sp" />

				<TextView
						android:id="@+id/school_grade"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@id/school_period"
						android:textSize="@dimen/dimen_14sp" />

				<TextView
						android:id="@+id/school_career"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@id/school_grade"
						android:textSize="@dimen/dimen_14sp" />


			</RelativeLayout>

		</LinearLayout>

	</RelativeLayout>

</android.support.v7.widget.CardView>
